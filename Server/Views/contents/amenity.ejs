              </select>
              </div>
              <div class="mb-3">
                <label for="date">Date</label>
                <input type="date" class='form-control' style="text-align: center;" name='date' id='date' required>
              </div>
              <div class="mb-3">
                <label for="timeslot" class="col-form-label">Select Time</label>
                <select id="timeslot" class="form-control" name='timeslot' required></select>
              </div>
              <div class="d-flex justify-content-between">
                <h6>Total:</h6>
                <p id="price" name="fee">$105.00</p>
              </div>
              
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
