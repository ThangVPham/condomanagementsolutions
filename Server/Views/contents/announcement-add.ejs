<div class="content-container">
    <div class="form d-none d-md-block">
        <form method="POST">
            <h3><i class="fas fa-bullhorn"></i> Announcement Info</h3><hr>
            <div class="d-flex">
                <div class="form-column w-50">
                    <div class="form-group col-md-6 mb-3 w-100">             
                      <label for="title">Title</label>
                      <div class="d-flex">
                          <input type="text" class="form-control me-1" id="title" value="<%=announcement.title%>" name="title">
                      </div>
                    </div>
                    <div class="form-group col-md-6 mb-3 w-100">
                      <div class="d-flex mb-3">
                          <div class="col-6  pe-1 ">
                              <label for="type">Type</label>
                              <select type="text" class="form-control" id="type" name="type">
                                  <%if(announcement.type!=null){%>
                                  <option value= "<%=announcement.type%>" selected><%=announcement.type%></option>
                                  <%}%>
                                  <option value="General">General</option>
                                  <option value="Entry Notice">Entry Notice</option>
                                  <option value="Maintenance">Maintenance</option>
                                  <option value="Service Outage">Service Outage</option>
                                  <option value="Others">Others</option>
                              </select>
                          </div>    
                          <div class="col-6 pe-2 mb-3">
                            <label for="priority">Priority</label>
                            <select type="text" class="form-control" id="priority" name="priority">
                                <%if(announcement.priority!=null){%>
                                    <option value= "<%=announcement.priority%>" selected><%=announcement.priority%></option>
                                <%}%>
                                <option value="Low" selected>Low</option>
                                <option value="High">High</option>
                            </select>
                        </div>            
                      </div>
                    </div>
                   
                </div>
                <div class="form-column w-50 d-flex justify-content-center">
                    <img src="/megaphone.gif" alt="" style="width:250px;">
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="body">Content</label>
                <textarea class="form-control" id="body" rows="3" placeholder="Announcement Content" name="body"><%=announcement.body?announcement.body:''%></textarea>
              </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/announcement"><button type="button" class="btn btn-secondary">Return</button></a>
            
          </form>
    </div>
